{# templates/mentor/predmeti.html.twig #}
{% extends 'mentor/mentor.html.twig' %}

{% block title %}
    {{ parent() }} - Popis predmeta
{% endblock %}

{% block pageTitle %}
    Predmeti
{% endblock %}

{% block body %}
    <main class="container">
        <ul class="list-group">
            {% for subj in subjects %}
                <li class="list-group-item list-group-item-action">
                    <span>{{ subj.ime }} ({{ subj.kod }})</span>
                    <a href="#" data-toggle="modal" data-target="#modalPredmet">
                        Detalji</a>
                    <a href="#">Uredi</a>
                </li>
            {% endfor %}
        </ul>
    </main>
{% endblock %}

{% block modal %}
    <div class="modal fade" id="modalPredmet" tabindex="-1" role="dialog" aria-labelledby="modalPredmet" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalPredmetTitle">Predmet</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Hello, world.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
